int main() {
    int numero;
    int positivos = 0;
    int negativos = 0;

    for (int i = 1; i <= 8; i++) {
        std::cout << "Digite o " << i << "º número: ";
        std::cin >> numero;

        if (numero > 0) {
            positivos++;
        } else if (numero < 0) {
            negativos++;
        }
    }

    std::cout << "\nQuantidade de números positivos: " << positivos << std::endl;
    std::cout << "Quantidade de números negativos: " << negativos << std::endl;

    return 0;
}
